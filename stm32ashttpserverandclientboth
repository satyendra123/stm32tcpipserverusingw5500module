/* Private user code ---------------------------------------------------------*/
/* USER CODE BEGIN 0 */
void cs_sel(){
	 HAL_GPIO_WritePin(CS_GPIO_Port, CS_Pin, GPIO_PIN_RESET);
}
void cs_desel(){
	HAL_GPIO_WritePin(CS_GPIO_Port, CS_Pin, GPIO_PIN_SET);
}
uint8_t spi_rb(void){
	uint8_t rbuf;
	HAL_SPI_Receive(&hspi1,&rbuf,1,0xFFFFFFFF);
	return rbuf;
}
void spi_wb(uint8_t b){
	HAL_SPI_Transmit(&hspi1,&b,1,0xFFFFFFFF);
}

void trigger_relay(void)
{
    HAL_GPIO_WritePin(RELAY_GPIO_Port, RELAY_Pin, GPIO_PIN_SET);
    HAL_Delay(300);
    HAL_GPIO_WritePin(RELAY_GPIO_Port, RELAY_Pin, GPIO_PIN_RESET);
}

void send_rs485(char *msg)
{
    HAL_UART_Transmit(&huart6, (uint8_t*)msg, strlen(msg), 100);
}

void parse_response(char *resp)
{
    char *veh_ptr = strstr(resp, "\"veh_no\"");
    char *status_ptr = strstr(resp, "\"status\"");

    if(!veh_ptr || !status_ptr) return;

    sscanf(veh_ptr, "\"veh_no\":\"%19[^\"]", vehicle_no);
    sscanf(status_ptr, "\"status\":\"%19[^\"]", status_str);
}

void http_server_listen(void)
{
    int32_t ret;
    uint8_t buf[512];

    switch(getSn_SR(SOCK_HTTP_SERVER))
    {
        case SOCK_INIT:
            listen(SOCK_HTTP_SERVER);
            break;

        case SOCK_ESTABLISHED:

            if(getSn_IR(SOCK_HTTP_SERVER) & Sn_IR_CON)
                setSn_IR(SOCK_HTTP_SERVER, Sn_IR_CON);

            ret = recv(SOCK_HTTP_SERVER, buf, sizeof(buf));
            if(ret > 0)
            {
                buf[ret] = '\0';

                // Extract JSON body (after \r\n\r\n)
                char *json_body = strstr((char*)buf, "\r\n\r\n");
                if(json_body) json_body += 4; // Move to start of JSON

                char veh_no[32] = {0};
                char status[32] = {0};

                // Parse JSON manually (simple)
                char *veh_ptr = strstr(json_body, "\"veh_no\"");
                if(veh_ptr)
                    sscanf(veh_ptr, "\"veh_no\":\"%31[^\"]\"", veh_no);

                char *status_ptr = strstr(json_body, "\"status\"");
                if(status_ptr)
                    sscanf(status_ptr, "\"status\":\"%31[^\"]\"", status);

                // -------- Relay Logic --------
                if(strcmp(status, "OPENEN%") == 0)
                {
                    trigger_relay();
                }

                // -------- RS485 Display --------
                if(strlen(veh_no) > 0)
                {
                    send_rs485(veh_no);
                }

                // Send HTTP JSON Response
                const char *http_response =
                    "HTTP/1.1 200 OK\r\n"
                    "Content-Type: application/json\r\n"
                    "Content-Length: 15\r\n"
                    "\r\n"
                    "{\"message\":\"OK\"}";

                send(SOCK_HTTP_SERVER, (uint8_t*)http_response, strlen(http_response));
            }
            break;

        case SOCK_CLOSE_WAIT:
            disconnect(SOCK_HTTP_SERVER);
            break;

        case SOCK_CLOSED:
            socket(SOCK_HTTP_SERVER, Sn_MR_TCP, 6000, 0);
            break;
    }
}


int http_send_rfid(char *rfid)
{
    int ret;

    uint8_t server_ip[4] = {192, 168, 1, 85};   // Backend server IP

    /* 1) Open TCP socket on socket 0 */
    if(socket(SOCK_TCPC, Sn_MR_TCP, 0, 0) != SOCK_TCPC)
        return -1;

    /* 2) Connect to backend */
    ret = connect(SOCK_TCPC, server_ip, 5000);
    if(ret != SOCK_OK) return -2;

    /* 3) Create JSON body */
    char json_body[128];
    sprintf(json_body, "{\"data\":\"%s\"}", rfid);

    /* 4) Build HTTP POST payload */
    sprintf(tx_buf,
        "POST /rfid_data HTTP/1.1\r\n"
        "Host: 192.168.1.85:5000\r\n"
        "Content-Type: application/json\r\n"
        "Content-Length: %d\r\n"
        "Connection: close\r\n"
        "\r\n"
        "%s",
        (int)strlen(json_body),
        json_body
    );

    /* 5) Send request */
    send(SOCK_TCPC, (uint8_t*)tx_buf, strlen(tx_buf));

    /* 6) Receive response */
    memset(rx_buf, 0, sizeof(rx_buf));
    char dataRxx[1024];
    ret = recv(SOCK_TCPC, dataRxx, sizeof(dataRxx));
    if(ret <= 0) return -3;

    ret = recv(SOCK_TCPC, (uint8_t*)rx_buf, sizeof(rx_buf));
        if(ret <= 0) return -3;

    /* 7) Close socket */
    disconnect(SOCK_TCPC);
    close(SOCK_TCPC);

    return 0;
}


