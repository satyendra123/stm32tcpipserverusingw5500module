/* USER CODE BEGIN Includes */
#include "main.h"
/* USER CODE END Includes */

// Define LED pin array
GPIO_TypeDef* LED_PORT = GPIOA;
uint16_t LED_PINS[] = {GPIO_PIN_0, GPIO_PIN_1, GPIO_PIN_2, GPIO_PIN_3};

/* USER CODE BEGIN PV */
int ledCount = 4;
/* USER CODE END PV */

int main(void)
{
  HAL_Init();
  SystemClock_Config();
  MX_GPIO_Init();

  /* Infinite loop */
  while (1)
  {
    // Turn ON LEDs one by one
    for(int i = 0; i < ledCount; i++){
        HAL_GPIO_WritePin(LED_PORT, LED_PINS[i], GPIO_PIN_SET);
        HAL_Delay(300);
    }

    HAL_Delay(500);

    // Turn OFF LEDs one by one
    for(int i = 0; i < ledCount; i++){
        HAL_GPIO_WritePin(LED_PORT, LED_PINS[i], GPIO_PIN_RESET);
        HAL_Delay(300);
    }

    HAL_Delay(500);
  }
}
